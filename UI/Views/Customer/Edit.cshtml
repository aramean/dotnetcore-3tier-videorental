    <div class="form-group">
        <label class="col-form-label w-100 pt-0">Customer type</label>
        <div class="form-check form-check-inline">
            <div class="custom-control custom-radio custom-control-inline">
                <input asp-for="CustomerType" type="radio" id="customRadioInline1" class="custom-control-input" value="0" checked="@(Model.CustomerType == 0)">
                <label class="custom-control-label" for="customRadioInline1">Regular</label>
            </div>
        </div>
